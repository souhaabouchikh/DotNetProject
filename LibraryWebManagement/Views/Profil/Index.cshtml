                                <p style="color:black;">Book Lover <3</p>
                                <i class="far fa-edit mb-5"></i>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>Information</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-6">
                                            <h6>Email</h6>
                                            <p class="text-muted">@ViewBag.email</p>
                                        </div>
                                        <div class="col-6 mb-3">
