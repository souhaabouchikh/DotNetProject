@model List<Models.BookViewModel>
<!DOCTYPE html>
<html>
<head>
    <title>Manage Books</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .table td, .table th {
            vertical-align: middle !important;
        }

        .table td {
            padding: 0.5rem;
        }

        .table th {
            padding: 0.5rem;
            text-align: left;
        }

        .pagination .page-item .page-link {
            padding: 0.25rem 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4">Manage Books</h1>
        <a class="nav-link text-dark" asp-area="" asp-controller="CreateBook" asp-action="Index">
          Add New Books
        </a>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Book Id</th>
                    <th>Book Name</th>
                    <th>Writer</th>
                    <th>Price</th>
                    <th>Delete</th>
                    <th>Modify</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Writer</td>
                        <td>@item.Price</td>
                        <td><a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a></td>
                        <td><button class="btn btn-primary btn-sm">Modify</button></td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</body>
</html>
